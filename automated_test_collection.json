                    "if (!pm.collectionVariables.get(\"userEmail\")) {",
                    "    const timestamp = Date.now();",
                    "    const randomEmail = `testuser_${timestamp}@example.com`;",
                    "    pm.collectionVariables.set(\"userEmail\", randomEmail);",
                    "    console.log(\"Generated Dynamic Email: \", randomEmail);",
                    "}",
                    "",
                    "// Default baseUrl",
                    "if (!pm.collectionVariables.get(\"baseUrl\")) {",
                    "    pm.collectionVariables.set(\"baseUrl\", \"http://localhost:8080\");",
                    "}"
                ]
