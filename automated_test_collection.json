            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 201 or 200\", function () {",
                                    "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                                    "});",
                                    "",
                                    "if (pm.response.code === 201 || pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.token) pm.collectionVariables.set(\"jwtToken\", jsonData.token);",
                                    "    if (jsonData.id) pm.collectionVariables.set(\"customerId\", jsonData.id);",
                                    "    else if (jsonData.user && jsonData.user.id) pm.collectionVariables.set(\"customerId\", jsonData.user.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"Password123\",\n  \"phoneNumber\": \"+15551234567\",\n  \"address\": [\n    {\n      \"street\": \"123 Main St\",\n      \"number\": \"Apt 4B\",\n      \"neighborhood\": \"Downtown\",\n      \"city\": \"Chicago\",\n      \"state\": \"IL\",\n      \"zipCode\": \"60601\",\n      \"country\": \"USA\",\n      \"type\": \"HOME\",\n      \"isDefault\": true\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
